{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@angular-node-electron/catalog": ["libs/frontend/catalog/src/index.ts"],
      "@angular-node-electron/catalog-domain": [
        "libs/catalog-domain/src/index.ts"
      ],
      "@angular-node-electron/catalog-contract": [
        "shared/catalog-contract/src/index.ts"
      ],
      "@angular-node-electron/catalog-application": [
        "libs/catalog-application/src/index.ts"
      ],
      "@angular-node-electron/catalog-infrastructure": [
        "libs/catalog-infrastructure/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
